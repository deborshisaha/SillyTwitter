<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_profile_picture_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:riv_corner_radius="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_identity_layout"
        android:layout_toRightOf="@+id/user_profile_picture_imageview">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_full_name_textview"
            android:textStyle="bold"
            android:textColor="@color/black_color"
            android:layout_marginRight="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview"
            android:layout_toRightOf="@+id/user_full_name_textview"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_time_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignTop="@+id/user_profile_picture_imageview"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:id="@+id/tweet_content"
        android:layout_toRightOf="@+id/user_profile_picture_imageview"
        android:layout_below="@+id/user_identity_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_text_textview"
            android:autoLink="all"
            android:linksClickable="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/images_holder"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tweet_text_textview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:weightSum="10">

                <VideoView
                    android:id="@+id/videoplayer_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_weight="10"
                    android:id="@+id/image_one_imageview"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical = "true"
                    android:layout_centerHorizontal = "true"
                    android:layout_weight="10"
                    android:id="@+id/start"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_interactions_holder"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/user_profile_picture_imageview"
        android:layout_below="@+id/tweet_content">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="60dp"
            android:clickable="true"
            android:id="@+id/reply_icon_imageview"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_reply"/>

        <RelativeLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:id="@+id/rlRetweetHolder"
            android:paddingTop="1dp"
            android:clickable="true"
            android:layout_toRightOf="@+id/reply_icon_imageview">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_retweet_grey"
                android:id="@+id/retweet_icon"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/retweet_count_textview"
                android:layout_toRightOf="@+id/retweet_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:id="@+id/rlFavoritesHolder"
            android:clickable="true"
            android:layout_toRightOf="@+id/rlRetweetHolder">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_fav_grey"
                android:id="@+id/favorite_icon"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/favorite_count_textview"
                android:layout_toRightOf="@+id/favorite_icon"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:id="@+id/seperator_line"
        android:layout_below="@+id/user_interactions_holder"
        android:background="#EDEDED"/>

</RelativeLayout>