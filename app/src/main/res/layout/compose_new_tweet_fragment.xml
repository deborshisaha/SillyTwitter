<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingRight="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compose_new_tweet_title_view">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/current_user_profile_picture_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:riv_corner_radius="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_user_name_textview"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/current_user_profile_picture_imageview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_user_screenname_textview"
            android:layout_toRightOf="@+id/current_user_profile_picture_imageview"
            android:layout_below="@+id/current_user_name_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/characters_left_textview"
            android:layout_toRightOf="@+id/current_user_profile_picture_imageview"
            android:layout_below="@+id/current_user_screenname_textview"/>

        <ImageButton
            android:id="@+id/post_tweet_button"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:adjustViewBounds="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitXY"
            android:background="@drawable/rounded_view"
            android:src="@drawable/ic_send"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:id="@+id/tweet_edittext"-->
        <!--android:layout_below="@+id/compose_new_tweet_title_view"/>-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/compose_new_tweet_title_view">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:inputType="textNoSuggestions"
            android:ems="10" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>